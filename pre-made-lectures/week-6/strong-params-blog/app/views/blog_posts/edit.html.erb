<h1>Edit Post</h1>

<%# use model when using strong params %>
<%= form_with model: @blog_post, local: true, method: :patch do |form| %>

  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :content %>
  <%= form.text_field :content %>

  <%= form.submit :create %>
<% end %>
